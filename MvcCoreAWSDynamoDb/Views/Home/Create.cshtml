@model MvcCoreAWSDynamoDb.Models.Coche

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mt-5">Crear Coche</h2>


<form method="post" class="pb-3" enctype="multipart/form-data">
    <div class="card mt-3">
        <div class="card-body p-3">
            <div class="form-group">
                <label>Id Coche</label>
                <input type="text" class="form-control" name="idCoche">
            </div>
            <div class="form-group">
                <label>Marca</label>
                <input type="text" class="form-control" name="marca">
            </div>
            <div class="form-group">
                <label>Modelo</label>
                <input type="text" class="form-control" name="modelo">
            </div>
            <div class="form-group">
                <label>Velocidad Maxima</label>
                <input type="text" class="form-control" name="velocidadMaxima">
            </div>
            <div class="form-group">
                <label>Imagen</label>
                <input type="file" class="form-control" name="imagen">
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body p-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="incluirmotor">
                <label class="form-check-label" for="exampleCheck1">Incluir Motor</label>
            </div>
            <div class="form-group">
                <label>Tipo de motor</label>
                <input type="text" name="tipo" class="form-control" />
            </div>
            <div class="form-group">
                <label>Caballos</label>
                <input type="text" name="caballos" class="form-control" />
            </div>
            <div class="form-group">
                <label>Cilindrada</label>
                <input type="text" name="cilindrada" class="form-control" />
            </div>
        </div>
    </div>
    <input type="submit" value="Crear" class="btn btn-outline-dark float-right mt-3"/>
</form>

<div>
    <a asp-action="Index" class="text-dark">Back to List</a>
</div>
